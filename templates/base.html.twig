
{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link
            rel="icon"
            href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"
        />
        {% block stylesheets %}
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
            crossorigin="anonymous"
        />
        {% endblock %} {% block javascripts %}
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
            crossorigin="anonymous"
        ></script>
        {% block importmap %}{{
            importmap("app")
        }}{% endblock %} {% endblock %}
    </head>
    <body>
        {# Permet que le header et le menu ne s'affiche pas sur la page de connexion #}
        {% if app.request.attributes.get('_route') != 'app_login' %}
        <header>
            <h2><a href="{{ path('app_home') }}">Ticket Page</a></h2>

            <div class="log">
                <p>{{ app.user ? app.user.email : "" }}</p>
                {% if app.user and (is_granted('ROLE_ADMIN') or
                is_granted('ROLE_USER')) %} {% endif %} {% if app.user %}
                <p><a href="{{ path('app_logout') }}">Déconnexion</a></p>
                {% else %}
                <p><a href="{{ path('app_login') }}">Connexion</a></p>
                {% endif %}
            </div>        
        </header>
        <nav>
            <!-- Menu -->
            {% if app.user and (is_granted('ROLE_ADMIN') or
            is_granted('ROLE_USER')) %}
            <li><a href="{{ path('app_admin') }}">Admin</a></li>
            {% endif %}
        </nav>
        {% endif %}

        <div class="container mt-4">
            {% block body %} {# Boîte à message d'erreur ou de succès #} {% for
            label, messages in app.flashes %} {% for message in messages %}
            <div
                class="alert alert-{{
                    label == 'error' ? 'danger' : label
                }} p-2 my-2 small rounded mx-auto w-50"
                role="alert"
            >
                {{ message }}
            </div>
            {% endfor %} {% endfor %} {% endblock %}
        </div>
    </body>
</html>
