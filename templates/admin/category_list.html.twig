{# templates/admin/categories_list.html.twig #} 
{% extends 'base.html.twig' %}
{% block title %}Liste des catégories{% endblock %} {% block body %}
<div class="container">
    <h2>Liste des catégories</h2>

    <div class="container d-flex flex-column gap-2">
        {% for categorie in categories %}
        <div
            class="d-flex justify-content-between align-items-center p-3 border rounded"
        >
            <div class="fs-5">{{ categorie.nom }}</div>
            <div>
                <a
                    href="{{
                        path('app_admin_category_edit', { id: categorie.id })
                    }}"
                    class="btn btn-primary btn-sm me-2"
                    >Modifier</a
                >
                <a
                    href="{{
                        path('app_admin_category_delete', { id: categorie.id })
                    }}"
                    class="btn btn-danger btn-sm"
                >
                    Supprimer
                </a>
            </div>
        </div>
        {% else %}
        <div class="text-center text-muted p-3 border rounded">
            Aucune catégorie enregistrée.
        </div>
        {% endfor %}
        <div class="m-2">
            <a href="{{ path('app_admin_category_create') }}" class="btn btn-primary"
                >Ajouter une catégorie</a
            >
            <a href="{{ path('app_admin') }}" class="btn btn-secondary"
                >Retour</a
            >
        </div>
    </div>

</div>
{% endblock %}
