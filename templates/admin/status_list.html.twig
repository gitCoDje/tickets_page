{# templates/admin/status_list.html.twig #} {% extends 'base.html.twig' %} {%
block title %}Liste des statuts{% endblock %} {% block body %}
<div class="container mb-4">
    <h2>Liste des statuts</h2>

    <div class="container d-flex flex-column gap-2">
        {% for statut in statuts %}
        <div
            class="d-flex justify-content-between align-items-center p-3 border rounded"
        >
            <div class="fs-5">{{ statut.statut }}</div>
            <div>
                <a
                    href="{{
                        path('app_admin_status_edit', { id: statut.id })
                    }}"
                    class="btn btn-primary btn-sm me-2"
                    >Modifier</a
                >
                <a
                    href="{{
                        path('app_admin_status_delete', { id: statut.id })
                    }}"
                    class="btn btn-danger btn-sm"
                >
                    Supprimer
                </a>
            </div>
        </div>
        {% else %}
        <div class="text-center text-muted p-3 border rounded">
            Aucune statut enregistrÃ©e.
        </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_admin_status_create') }}" class="btn btn-primary"
        >Ajouter une statut</a
    >
    <a href="{{ path('app_admin') }}" class="btn btn-secondary">Retour</a>
</div>
{% endblock %}
